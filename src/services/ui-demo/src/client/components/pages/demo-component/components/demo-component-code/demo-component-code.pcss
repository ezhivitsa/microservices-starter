.demo-component-code {
  &__pre {
    text-align: left;
    margin: 1em 0;
    padding: 0.5em;
    overflow: scroll;

    .token-line {
      line-height: 1.3em;
      height: 1.3em;
    }
  }

  &__line {
    display: table-row;
  }

  &__line-no {
    display: table-cell;
    text-align: right;
    padding-right: 1em;
    user-select: none;
    opacity: 0.5;
  }

  &__line-content {
    display: table-cell;
  }
}
