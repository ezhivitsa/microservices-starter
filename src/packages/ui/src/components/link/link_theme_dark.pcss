@import 'variables.pcss';

.link_theme_dark {
  color: var(--color-light-blue-400);

  .link {
    &__text {
      border-color: var(--color-light-blue-500);
    }

    &._disabled {
      color: var(--color-grey-200);
    }
  }

  &:hover,
  &:focus {
    color: var(--color-light-blue-200);

    .link__text {
      border-color: var(--color-light-blue-200);
    }
  }
}
