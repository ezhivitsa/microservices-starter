@import 'variables.pcss';

.link_theme_light {
  color: var(--color-blue-500);

  .link {
    &__text {
      border-color: var(--color-blue-300);
    }

    &._disabled {
      color: var(--color-grey-200);
    }
  }

  &:hover,
  &:focus {
    color: var(--color-blue-700);

    .link__text {
      border-color: var(--color-blue-700);
    }
  }
}
