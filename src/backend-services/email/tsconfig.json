{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2018",
    "lib": ["ES2018"],
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
